<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital_mangement_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital_mangement_2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hospital_mangement_2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admissions" asp-action="Create">Record Patient Admission</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Practitioners" asp-action="Index">Search Practitioners</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Encounters" asp-action="Create">Log Patient Encounter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Patients" asp-action="History">View Patient History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Home" asp-action="Exit">Exit</a>
                        </li>
                    </ul>
                    <form method="get" action="@Url.Action("Index", "Practitioner")">
                        <input type="text" name="name" placeholder="Search by name" value="@ViewBag.Name" />
                        <input type="text" name="specialty" placeholder="Search by specialty" value="@ViewBag.Specialty" />
                        <button type="submit">Search</button>
                    </form>
                    <form method="get" action="@Url.Action("Search", "Home")">
                        <div>
                            <label for="name">Hospital Name:</label>
                            <input type="text" id="name" name="name" value="@ViewBag.Name" placeholder="Enter hospital name" />
                        </div>
                        <div>
                            <label for="city">City:</label>
                            <input type="text" id="city" name="city" value="@ViewBag.City" placeholder="Enter city name" />
                        </div>
                        <button type="submit">Search</button>
                    </form>



                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Hospital_mangement_2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
